<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="JumpListAppLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JumpListAppLauncher">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="MyForeground" Color="#101010"/>
                    <SolidColorBrush x:Key="MyBackground" Color="#f8f8f8"/>
                    <SolidColorBrush x:Key="MyForegroundDisabled" Color="#808080"/>
                    <SolidColorBrush x:Key="MyBackgroundDisabled" Color="#e8e8e8"/>
                    <SolidColorBrush x:Key="MyHoverBackground" Color="#f0f0f0"/>
                    <SolidColorBrush x:Key="MyPressedBackground" Color="#ffffff"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="MyForeground" Color="#e0e0e0"/>
                    <SolidColorBrush x:Key="MyBackground" Color="#202020"/>
                    <SolidColorBrush x:Key="MyForegroundDisabled" Color="#909090"/>
                    <SolidColorBrush x:Key="MyBackgroundDisabled" Color="#303030"/>
                    <SolidColorBrush x:Key="MyHoverBackground" Color="#404040"/>
                    <SolidColorBrush x:Key="MyPressedBackground" Color="#000000"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
